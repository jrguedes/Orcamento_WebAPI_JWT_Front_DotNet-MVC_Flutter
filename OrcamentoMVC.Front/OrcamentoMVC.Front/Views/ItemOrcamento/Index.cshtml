@model OrcamentoViewModel
@{
    ViewData["Title"] = "Cadastro de Itens de Orçamento";
}

<section class="section-padding section-bg">
    <div class="container text-center">
        <div class="row">

            <div class="col-lg-12 col-12">
                <h3 class="mb-4 pb-2">Adicionar Item de Orcamento</h3>
            </div>
            <div class="col-lg-12 col-12">
                <h4 class="mb-4 pb-2 descricao-color">@Model.DescricaoOrcamento </h4>
            </div>

            <div class="col-lg-12 col-12">
                <form asp-action="CreateItemOrcamento" method="post" class="custom-form contact-form" role="form">
                    <div>
                        <input type="hidden" name="OrcamentoId" id="OrcamentoId" class="form-control" 
                            value="@Model.OrcamentoId">
                        <input type="hidden" name="DescricaoOrcamento" id="DescricaoOrcamento" class="form-control" 
                            value="@Model.DescricaoOrcamento">
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-floating">
                                <input type="text" name="local" id="local" class="form-control"
                                    placeholder="Estabelecimento" required="" value="@Model.ItemOrcamento.Local">

                                <label for="floatingInput">Estabelecimento</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-floating">
                                <input type="tel" name="telefone" id="telefone" class="form-control"
                                    placeholder="Telefone" required="" value="@Model.ItemOrcamento.Telefone">

                                <label for="floatingInput">Telefone</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-floating">
                                <input type="text" name="responsavelOrcamento" id="responsavelOrcamento"
                                    class="form-control" placeholder="Responsavel pelo orçamento" required="" value="@Model.ItemOrcamento.ResponsavelOrcamento">

                                <label for="floatingInput">Responsavel pelo orçamento</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-floating">
                                <input type="number" name="valor" id="valor" class="form-control" placeholder="Valor"
                                    required="" value="@Model.ItemOrcamento.Valor">

                                <label for="floatingInput">Valor</label>
                            </div>
                        </div>

                        <div class="col-lg-12 col-12">
                            <div class="form-floating">
                                <textarea class="form-control" id="descricao" name="descricao"
                                    placeholder="Descricao">@Model.ItemOrcamento.Descricao</textarea>

                                <label for="floatingTextarea">Observação</label>
                            </div>
                        </div>

                        <div class="col-lg-12 col-12 ms-auto">
                            <button type="submit" class="form-control">Adicionar à lista de Orçamentos</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        const tel = document.getElementById('telefone')

        tel.addEventListener('keypress', (e) => mascaraTelefone(e.target.value)) 
        tel.addEventListener('change', (e) => mascaraTelefone(e.target.value)) 

        const mascaraTelefone = (valor) => {
            valor = valor.replace(/\D/g, "")
            valor = valor.replace(/^(\d{2})(\d)/g, "($1) $2")
            valor = valor.replace(/(\d)(\d{4})$/, "$1-$2")
            tel.value = valor
        }
    </script>
}
