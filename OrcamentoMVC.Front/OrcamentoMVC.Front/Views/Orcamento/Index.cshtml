@model Orcamento
@{
    ViewData["Title"] = "Cadastro de Orçamento";
}

<section class="section-padding section-bg">
    <div class="container text-center">
        <div class="row">

            <div class="col-lg-12 col-12">
                <h3 class="mb-4 pb-2">Orçamento</h3>
            </div>

            <div class="col-lg-12 col-12">
                <form asp-action="CreateOrUpdateOrcamento" method="post" class="custom-form contact-form" role="form">
                    <div class="row">
                        <div>
                            <input type="hidden" name="id" id="id" value="@Model.Id">
                        </div>
                        <div class="col-lg-12 col-md-12 col-12">
                            <div class="form-floating">
                                <input type="text" name="descricao" id="descricao" class="form-control" placeholder="O que você gostaria de orçar?"
                                    required="" value="@Model.Descricao">

                                <label for="floatingInput">O que você gostaria de orçar?</label>
                            </div>
                        </div>                        
                        <div class="col-lg-12 col-12 ms-auto">
                            <button type="submit" class="form-control"> @(Model.Id == 0 ? "Criar orçamento" : "Salvar alteração") </button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
