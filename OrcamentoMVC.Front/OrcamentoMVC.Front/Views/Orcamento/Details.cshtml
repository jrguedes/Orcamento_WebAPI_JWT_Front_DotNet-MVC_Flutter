@using System.Net
@model OrcamentoItensViewModel
@{
    ViewData["Title"] = "Orçamentos";
}

<div class="container">
    <div class="row flex-box-center">
        <div class="col-md-offset-1 col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="col-lg-12 col-12 flex-box-center">
                                <h4 class="mb-4 pb-2 descricao-color">@Model.Descricao </h4>
                            </div>
                            <form asp-action="CreateNewItemOrcamento" asp-controller="ItemOrcamento" method="post"
                                class="custom-form">
                                <input type="hidden" class="form-control" name="idOrcamento" id="idOrcamento"
                                    placeholder="" value="@Model.Id">
                                <input type="hidden" class="form-control" name="descricaoOrcamento"
                                    id="descricaoOrcamento" placeholder="" value="@Model.Descricao">
                                <div class="col-lg-12 col-12 ms-auto">
                                    <button type="submit" class="form-control">Novo item de orçamento</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr class="row">
                                <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">Código</th>
                                <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Orçado</th>
                                <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Local</th>
                                <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">Telefone</th>
                                <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Responsável</th>
                                <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Valor</th>
                                <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itemOrcamento in Model.ItensOrcamento)
                            {
                                <tr class="row">
                                    <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">@itemOrcamento.Id</td>
                                    <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">@itemOrcamento.Descricao</td>
                                    <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">@itemOrcamento.Local</td>
                                    <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">@itemOrcamento.Telefone</td>
                                    <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">@itemOrcamento.ResponsavelOrcamento</td>
                                    <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                        @itemOrcamento.Valor.ToString("C")
                                    </td>
                                    <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                        <a asp-action="Delete"
                                            asp-controller="ItemOrcamento"
                                            asp-route-id="@itemOrcamento.Id" title="Deletar" class="btn btn-danger">
                                            <span class="fas fa-trash-alt"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
