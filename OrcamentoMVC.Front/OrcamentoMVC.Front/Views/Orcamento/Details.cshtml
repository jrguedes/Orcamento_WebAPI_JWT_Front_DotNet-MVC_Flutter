@model OrcamentoItensViewModel
@{
    ViewData["Title"] = "Orçamentos";
}

<div class="container">
    <div class="row flex-box-center">
        <div class="col-md-offset-1 col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="col-lg-12 col-12">
                                <a class="btn btn-sm" asp-action="List" asp-controller="Orcamento">Voltar</a>
                            </div>
                            <div class="col-lg-12 col-12 flex-box-center">
                                <h3 class="mb-4 pb-2 descricao-color">@Model.Descricao </h3>
                            </div>
                            <form asp-action="CreateNewItemOrcamento" asp-controller="ItemOrcamento" method="post"
                                class="custom-form">
                                <input type="hidden" class="form-control" name="idOrcamento" id="idOrcamento"
                                    placeholder="" value="@Model.Id">
                                <input type="hidden" class="form-control" name="descricaoOrcamento"
                                    id="descricaoOrcamento" placeholder="" value="@Model.Descricao">
                                <div class="col-lg-12 col-12 ms-auto">
                                    <button type="submit" class="form-control">Novo item de orçamento</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table id="tb-details" name="tb-details" class="table">
                        <thead>
                            <tr>                                
                                <th>Código</th>
                                <th>Orçado</th>
                                <th>Local</th>
                                <th>Telefone</th>
                                <th>Responsável</th>
                                <th>Valor</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itemOrcamento in Model.ItensOrcamento)
                            {
                                <tr>
                                    <td>@itemOrcamento.Id</td>
                                    <td>@itemOrcamento.Descricao</td>
                                    <td>@itemOrcamento.Local</td>
                                    <td>@itemOrcamento.Telefone</td>
                                    <td>@itemOrcamento.ResponsavelOrcamento</td>
                                    <td>
                                        @itemOrcamento.Valor.ToString("C")
                                    </td>
                                    <td>
                                        <a asp-action="Delete"
                                            asp-controller="ItemOrcamento"
                                            asp-route-id="@itemOrcamento.Id" title="Excluir" class="btn btn-danger">
                                            <span class="fas fa-trash-alt"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


