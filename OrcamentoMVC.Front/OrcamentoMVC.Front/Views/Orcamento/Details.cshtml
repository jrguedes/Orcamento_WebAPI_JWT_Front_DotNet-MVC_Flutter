@model OrcamentoItensViewModel
@{
    ViewData["Title"] = "Orçamentos";
}

<div class="container">
    <div class="row flex-box-center">
        <div class="col-md-offset-1 col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <form asp-action="NewOrcamento" method="get" class="custom-form">
                                <div class="col-lg-12 col-12 ms-auto">
                                    <button type="submit" class="form-control">Adicionar novo orçamento</button>
                                </div>
                            </form>
                            <div class="col-lg-12 col-12">
                                <h4 class="mb-4 pb-2 descricao-color">@Model.Descricao </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr class="row">
                                <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">Código</th>
                                <th class="col-xs-5 col-sm-5 col-md-5 col-lg-5">Orçado</th>
                                <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Valor</th>
                                <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itemOrcamento in Model.ItensOrcamento)
                            {
                                <tr class="row">
                                    <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">@itemOrcamento.Id</td>
                                    <td class="col-xs-5 col-sm-5 col-md-5 col-lg-5">@itemOrcamento.Descricao</td>
                                    <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">@itemOrcamento.Valor.ToString("pt-BR")
                                    </td>
                                    <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                        <a asp-action="Update" asp-route-id="@itemOrcamento.Id" title="Editar"
                                            class="btn btn-warning">
                                            <span class="fas fa-edit"></span>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@itemOrcamento.Id" title="Deletar"
                                            class="btn btn-danger">
                                            <span class="fas fa-trash-alt"></span>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@itemOrcamento.Id" title="Detalhes"
                                            class="btn btn-success">
                                            <span class="fas fa-newspaper"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
